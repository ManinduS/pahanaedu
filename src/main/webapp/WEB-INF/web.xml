<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Pahana Edu Web Application</display-name>

  <!-- Default page -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <!-- Force UTF-8 for all requests/responses -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>

  <!-- ================= Auth ================= -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>control.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>control.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <!-- ================= Items ================= -->
  <servlet>
    <servlet-name>AddItemServlet</servlet-name>
    <servlet-class>control.AddItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddItemServlet</servlet-name>
    <url-pattern>/items/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewItemsServlet</servlet-name>
    <servlet-class>control.ViewItemsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewItemsServlet</servlet-name>
    <url-pattern>/items</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditItemServlet</servlet-name>
    <servlet-class>control.EditItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditItemServlet</servlet-name>
    <url-pattern>/items/edit</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteItemServlet</servlet-name>
    <servlet-class>control.DeleteItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteItemServlet</servlet-name>
    <url-pattern>/items/delete</url-pattern>
  </servlet-mapping>

  <!-- ================= Customers ================= -->
  <servlet>
    <servlet-name>AddCustomerServlet</servlet-name>
    <servlet-class>control.AddCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCustomerServlet</servlet-name>
    <url-pattern>/addCustomer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ViewCustomersServlet</servlet-name>
    <servlet-class>control.ViewCustomersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewCustomersServlet</servlet-name>
    <url-pattern>/customers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <servlet-class>control.UpdateCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <url-pattern>/updateCustomer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <servlet-class>control.DeleteCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <url-pattern>/deleteCustomer</url-pattern>
  </servlet-mapping>

  <!-- ================= Billing (no DB save) ================= -->
  <servlet>
    <servlet-name>BillingServlet</servlet-name>
    <servlet-class>control.BillingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BillingServlet</servlet-name>
    <url-pattern>/billing</url-pattern>
  </servlet-mapping>

  <!-- Session timeout (minutes) -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

</web-app>
